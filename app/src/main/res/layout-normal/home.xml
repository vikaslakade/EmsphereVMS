<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_inner_bg">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar2"
        android:background="@color/grey" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/VMS"
            android:gravity="start"
            android:layout_gravity="left"
            android:textColor="@color/toolbar"
            android:textSize="30sp"/>
        </android.support.v7.widget.Toolbar>



   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/visitormngmt"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="21dp" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/emsphere_logo143"
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar2"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="178dp"
        android:background="@drawable/home_btnnew_border"
        android:id="@+id/search_button"
        android:onClick="OnSearchbuttonclick"

        android:layout_below="@+id/welcm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp">


        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/icon_registed_visitor"
            android:id="@+id/imageView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Registered Visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:id="@+id/textView13"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" />
    </RelativeLayout>

    <TextView
        android:text="Welcome..."
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcm"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/search_button"
        android:layout_alignStart="@+id/search_button" />

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="178dp"
        android:background="@drawable/home_btnnew_border"
        android:id="@+id/add_button"
        android:onClick="OnAddbuttonclick"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/search_button"
        android:layout_alignLeft="@+id/search_button"
        android:layout_alignStart="@+id/search_button">


        <TextView
            android:text="Sign Up Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/textView16"
            android:layout_marginBottom="6dp"
            android:layout_below="@+id/textView14"
            android:layout_alignRight="@+id/textView14"
            android:layout_alignEnd="@+id/textView14" />

        <TextView
            android:text="New Visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:id="@+id/textView14"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button" />

        <Button
            android:text="Sign Up"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btnsignup"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:id="@+id/button"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_below="@+id/textView16" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/icon_new_visitor"
            android:id="@+id/imageView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>