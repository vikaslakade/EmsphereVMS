<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/visitlistrow"
    android:padding="6dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="100"
        android:background="@drawable/expected_visitor_recycler_border">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:weightSum="30">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/photoicon"

                android:gravity="center"
                android:layout_weight="30"

                android:background="#f0f0f0"
                android:id="@+id/imageView3" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="70"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_name"
                    android:textSize="@dimen/medium_textsize"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:hint="Name"


                    android:layout_weight="25" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/medium_textsize"
                    android:id="@+id/textView_mobile_no"
                    android:hint="Mobileno"
                    android:gravity="center"

                    android:layout_weight="25" />
                <TextView
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_apmt_time"
                    android:hint="Appoint time"
                    android:textColor="#8181FF"
                    android:gravity="center"

                    android:layout_weight="20" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="70"
                android:orientation="horizontal"

                android:gravity="center"
                >

                <TextView
                    android:text="Purpose "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_title"
                    android:textColor="#464646"
                    android:hint="Purpose"
                    android:textSize="@dimen/medium_textsize"
                    android:gravity="center"
                    android:layout_weight="25" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_purpose"
                    android:textColor="#464646"
                    android:hint="Purpose"
                    android:textSize="@dimen/medium_textsize"
                    android:gravity="center"

                    android:layout_weight="25" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_purpose12"
                    android:textColor="#464646"
                    android:textSize="@dimen/medium_textsize"
                    android:gravity="center"

                    android:layout_weight="20" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
