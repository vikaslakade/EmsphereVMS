<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="6dp"
                android:weightSum="30"

                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    card_view:srcCompat="@drawable/photoicon"
                    android:id="@+id/imageView_pic"
                   />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="70">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"

                    >
            <TextView
                android:text="Radha Bansal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                 android:layout_weight="35"

                android:id="@+id/name_textview"
                android:textSize="18sp"
                android:textColor="#000000"/>
                <TextView
                    android:text="+2345678901"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:id="@+id/phn_textview"
                    android:textColor="@color/colorAccent"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"

                    android:gravity="center">
                    <TextView
                        android:text="Representing :"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:textSize="18sp"
                        android:id="@+id/represnt_textview"
                        android:textColor="#000000"

                        />
            <TextView
                android:text="N.Venkatesh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:textSize="18sp"
                android:id="@+id/represnt_name_textview"
                />
                </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="6dp"
              >
               <TextView
                   android:text="purpose :"
                   android:textSize="18sp"
                   android:layout_weight="35"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/purpose_textview"
                   android:textColor="#000000"


                   />


            <TextView
                android:text="Interview"
                android:layout_weight="35"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                 android:textSize="18sp"
                android:id="@+id/purpose_datatextview"
                />
           </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp">

            <TextView
                android:text="Response"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
               android:layout_weight="25"
                android:id="@+id/response_textview"
                android:textColor="#000000"
               />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="18sp"
                        android:layout_weight="45"
                        android:id="@+id/responce_editText"
                        android:background="@drawable/border"
                        android:padding="3dp"
                        android:scrollbars="vertical"
                        />
                </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="70"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp">

            <Button
                android:text="Allow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:onClick="onClickallow"

                android:layout_weight="35"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="16sp"
                android:gravity="center"
                android:background="#09AB18"



                />

                <Button
                    android:text="No Thanks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/no_thanksbutton"
                    android:background="#EE0202"
                    android:layout_weight="35"

                   android:layout_marginLeft="10dp"
                    android:layout_gravity="end"
                   android:onClick="onClickNothanks"
                    android:textSize="16sp"

                    />
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>