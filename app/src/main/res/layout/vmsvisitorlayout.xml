<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_inner_bg"

    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="@string/VMS"
            android:textColor="@color/toolbar"
            android:textSize="30sp" />
    </android.support.v7.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="vertical">
            <!--<ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_btnnew_border"
                    android:drawableLeft="@drawable/icon_registed_visitor"
                    android:onClick="OnSearchbuttonclick"
                    android:padding="10dp"
                    android:text="Search Registered Visitor"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_new_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_btnnew_border"
                    android:drawableLeft="@drawable/icon_new_visitor"
                    android:onClick="OnAddbuttonclick"
                    android:padding="10dp"
                    android:text="ADD New Visitor"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_btnnew_border"
                    android:drawableLeft="@drawable/icon_registed_visitor"
                    android:onClick="OnVerifybuttonclick"
                    android:padding="10dp"
                    android:text="Check In By Visitor Code"
                    android:textSize="20sp" />

            </LinearLayout>
           <!-- </ScrollView>-->
        </LinearLayout>


</LinearLayout>
