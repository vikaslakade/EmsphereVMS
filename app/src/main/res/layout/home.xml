<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_inner_bg">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar2"
        android:background="@color/grey" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/VMS"
            android:layout_gravity="left"
            android:textColor="@color/toolbar"
            android:textSize="20sp"/>

        </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Welcome..."
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcm"
            android:layout_above="@+id/search_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_reg_user"
            android:id="@+id/search_button"
            android:onClick="OnSearchbuttonclick"
            android:layout_marginBottom="17dp"
            android:layout_above="@+id/add_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_signup"
            android:id="@+id/add_button"
            android:layout_marginBottom="27dp"
            android:onClick="OnAddbuttonclick"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/search_button"
            android:layout_alignStart="@+id/search_button" />

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/visitormngmt"
            android:id="@+id/imageView2"
            android:layout_marginBottom="22dp"
            android:layout_above="@+id/welcm"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/emsphere_logo143"
            android:id="@+id/imageView"

            android:layout_marginBottom="51dp"
            android:layout_above="@+id/welcm"
            android:layout_alignLeft="@+id/search_button"
            android:layout_alignStart="@+id/search_button"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp" />

    </RelativeLayout>

</RelativeLayout>